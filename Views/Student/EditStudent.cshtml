@model CS2AZapicoEdwardJoseph_MVCProject.BusLogic.Model.tblStudent

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Update Student</h3>
                </div>
                <div class="card-body">
                    <form id="editStudentForm">
                        <input type="hidden" id="StudentID" value="@Model.ID" />
                        <div class="mb-3">
                            <label for="FirstName" class="form-label">First Name</label>
                            <input type="text" class="form-control" id="FirstName" name="FirstName" value="@Model.FirstName" required>
                        </div>
                        <div class="mb-3">
                            <label for="LastName" class="form-label">Last Name</label>
                            <input type="text" class="form-control" id="LastName" name="LastName" value="@Model.LastName" required>
                        </div>
                        <div class="mb-3">
                            <label for="Age" class="form-label">Age</label>
                            <input type="number" class="form-control" id="Age" name="Age" value="@Model.Age" required>
                        </div>
                        <div class="mb-3">
                            <label for="Course" class="form-label">Course</label>
                            <input type="text" class="form-control" id="Course" name="Course" value="@Model.Course" required>
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Update</button>
                            <a href="/Student/Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

